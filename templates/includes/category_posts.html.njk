{% macro render(category, description, data) %}
<div>
    <h4 class='text-l font-bold'>{{category}}</h4>
    <p class='pb-4 italic'>{{description}}</p>
    <ul class="prose divide divide-dotted">
      {%- set categoryDataItems = data.categories[category] -%}
      {%- for categoryItem in categoryDataItems -%}
        {% if categoryItem.published %}
        <li><a href="{{ categoryItem.path|safe }}/{{ categoryItem.slug|safe }}">{{ categoryItem.title|safe }}</a></li>
        {% endif %}
      {%- endfor %}
    </ul>
</div>
{% endmacro %}